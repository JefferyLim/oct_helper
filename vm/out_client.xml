<?xml version="1.0"?>
<domain type="kvm">
  <name>out_client</name>
  <memory unit="GiB">4</memory>
  <vcpu>4</vcpu>
  <os>
    <type arch="x86_64" machine="pc-q35-jammy">hvm</type>
    <boot dev="hd"/>
  </os>
  <features>
    <acpi/>
    <apic/>
  </features>
  <cpu mode="host-passthrough"/>
  <devices>
    <!-- Boot disk -->
    <disk type="file" device="disk">
      <driver name="qemu" type="qcow2"/>
      <source file="/ubuntu22.04.qcow2"/>
      <target dev="vda" bus="virtio"/>
    </disk>
    <!-- Network (default NAT) -->
    <interface type="network">
      <source network="default"/>
      <model type="virtio"/>
    </interface>


    <interface type='bridge'>
      <source bridge='brvlan100'/>
      <model type='virtio'/>
      <mac address='52:54:00:00:04:02'/>
    </interface>

<filesystem type='mount' accessmode='passthrough'>
  <source dir='/users/jlim/vm-results'/>
  <target dir='results'/>
</filesystem>


    <!-- Serial console -->
    <console type="pty">
      <target type="serial" port="0"/>
    </console>
    <channel type="unix">
      <target type="virtio" name="org.qemu.guest_agent.0"/>
    </channel>
    <!-- Graphics console -->
    <graphics type="spice" autoport="yes"/>
  </devices>
</domain>
