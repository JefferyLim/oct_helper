<?xml version="1.0"?>
<domain type="kvm">
  <name>hw_client</name>
  <memory unit="MiB">16384</memory>
  <vcpu>16</vcpu>
  <os>
    <type arch="x86_64" machine="pc-q35-jammy">hvm</type>
    <boot dev="hd"/>
  </os>
  <features>
    <acpi/>
    <apic/>
  </features>
  <cpu mode="host-passthrough"/>

  <memoryBacking>
      <source type='memfd'/>
      <access mode='shared'/>
  </memoryBacking>

  <devices>
    <!-- Boot disk -->
    <disk type="file" device="disk">
      <driver name="qemu" type="qcow2"/>
      <source file="/client.qcow2"/>
      <target dev="vda" bus="virtio"/>
    </disk>
    <!-- Network (default NAT) -->
    <interface type="network">
      <source network="default"/>
      <model type="virtio"/>
    </interface>
    <!-- PCI passthrough device -->
    <hostdev mode="subsystem" type="pci" managed="yes">
      <source>
        <address domain="0x0000" bus="0x81" slot="0x00" function="0x4"/>
      </source>
  </hostdev>


    <filesystem type='mount' accessmode='passthrough'>
        <driver type='virtiofs'/>
        <source dir='/users/jlim/vm-results'/>
        <target dir='results'/>
    </filesystem>
    <!-- Serial console -->
    <console type="pty">
      <target type="serial" port="0"/>
    </console>
    <channel type="unix">
      <target type="virtio" name="org.qemu.guest_agent.0"/>
    </channel>
    <!-- Graphics console -->
    <graphics type="spice" autoport="yes"/>
  </devices>
</domain>
